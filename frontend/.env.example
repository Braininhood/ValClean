# API (use http://127.0.0.1:8000/api when opening app at http://127.0.0.1:3000)
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_APP_NAME=VALClean Booking System
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (anon/publishable key only - safe for frontend; never put service_role here)
# Google OAuth: enable in Supabase Dashboard -> Authentication -> Providers -> Google
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google (optional)
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Payments (optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Feature flags (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
